<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dog1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3C0B53"
        android:orientation="vertical"
        android:padding="100px">


        <Button
            android:id="@+id/B_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_d"
            android:fontFamily="sans-serif-black"
            android:text="@string/Update_btn"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/B_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_d"
            android:fontFamily="sans-serif-black"
            android:text="@string/Delete_chnge"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/B_button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_d"
            android:fontFamily="sans-serif-black"
            android:text="@string/cal_butn1"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
